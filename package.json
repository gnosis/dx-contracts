{
  "name": "@gnosis.pm/dx-contracts",
  "version": "2.0.0-SNAPSHOT.5",
  "description": "DutchX - Gnosis Dutch Auction Trading Platform. This npm package provides all smartcontracts used in the project",
  "scripts": {
    "rpc": "ganache-cli -d --mnemonic 'candy maple cake sugar pudding cream honey rich smooth crumble sweet treat' --defaultBalanceEther '500000000000000000000'",
    "preversion": "npm run restore",
    "test": "truffle test -s",
    "truffle": "truffle",
    "networks-extract": "node src/extract_network_info.js",
    "networks-inject": "node src/inject_network_info.js",
    "networks-reset": "mkdir -p build/contracts && truffle networks --clean && npm run networks-inject",
    "networks": "truffle networks",
    "compile-todo": "eslint --fix . && eslint . && truffle compile",
    "compile": "truffle compile",
    "restore": "rm -rf build && npm run compile && npm run networks-reset",
    "migrate": "truffle migrate",
    "lint": "eslint .",
    "add-token-pairs": "truffle exec src/truffle/add-token-pairs.js",
    "approve-tokens": "truffle exec src/truffle/approve-tokens.js",
    "unlock-mgn": "truffle exec src/truffle/unlock-mgn.js",
    "claim-unlocked-mgn": "truffle exec src/truffle/claim-unlocked-mgn.js",
    "set-auctioneer": "truffle exec src/truffle/set-auctioneer.js",
    "get-abi-encoded-params": "truffle exec src/truffle/get-abi-encoded-params.js",
    "decode": "node ./node_modules/decode-eth/main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gnosis/dx-contracts.git"
  },
  "author": "Gnosis",
  "license": "LGPL-3",
  "dependencies": {
    "@gnosis.pm/gno-token": "1.1.2",
    "@gnosis.pm/owl-token": "^1.2.2",
    "@gnosis.pm/util-contracts": "1.1.1"
  },
  "devDependencies": {
    "@digix/tempo": "^0.2.0",
    "bignumber.js": "^5.0.0",
    "coveralls": "^3.0.1",
    "decimal.js": "^7.2.3",
    "decode-eth": "^0.1.2",
    "diff": "3.4.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "minimist": "^1.2.0",
    "solidity-coverage": "^0.5.4",
    "truffle": "4.1.5",
    "truffle-contract": "^3.0.5",
    "truffle-flattener": "^1.2.5",
    "truffle-hdwallet-provider": "0.0.5",
    "truffle-hdwallet-provider-privkey": "^0.3.0",
    "web3": "^0.20.2",
    "yargs": "^11.0.0"
  }
}
